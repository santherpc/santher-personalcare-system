{
  "name": "rest-express-workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "check": "npm run check --workspaces --if-present",
    "db:push": "npm run db:push --workspace=backend",
    "install:all": "npm install"
  },
  "devDependencies": {
    "typescript": "5.6.3",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7"
  }
}
